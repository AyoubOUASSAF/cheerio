<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scraping App</title>
</head>
<body>
    <h1>Web Scraping App</h1>
    
    <!-- Display the "Trovati risultati" message -->
    <% if (trovati) { %>
        <div><%- trovati %></div>
    <% } %>

    <!-- Display the search form -->
    <form action="/scrape" method="post">
        <label for="query">Search Term:</label>
        <input type="text" name="query" id="query" required>
        <br>
        <label for="limit">Result Limit:</label>
        <input type="number" name="limit" id="limit" value="5" required>
        <br>
        <button type="submit">Search</button>
    </form>

    <!-- Display the results -->
    <% if (results && results.length > 0) { %>
        <ul>
            <% results.forEach((result) => { %>
                <li><a href="<%- result.href %>"><%- result.text %></a></li>
            <% }); %>
        </ul>
    <% } else if (error) { %>
        <p><%- error %></p>
    <% } %>
</body>
</html>
